<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.slash.batterychargelimit.MainActivity"
    tools:showIn="@layout/activity_main">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rel"
    android:layout_below="@+id/button1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/limit_TextView"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:textColor="@android:color/black"
        android:text="Limit(between 40 and 99): " />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/limit_TextView"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:id="@+id/limit_EditText"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:inputType="number"
        android:text="80"
        android:background="@drawable/textbox"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:id="@+id/changeLimitButton"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="16dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/rel"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:id="@+id/stat">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cstatus"
            android:text="Status: "
            android:textColor="@android:color/black"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status"
            android:layout_toRightOf="@+id/cstatus"
            android:text="UNKNOWN"
            android:textSize="16sp"
            />

    </RelativeLayout>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable "
        android:textSize="16sp"
        android:id="@+id/button1"
        android:layout_centerHorizontal="true"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stat"
        android:text="Select file: "
        android:id="@+id/file"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        />
    <RadioGroup
        android:id="@+id/rgOpinion"
        android:layout_below="@+id/file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        >
        <RadioButton
            android:id="@+id/charging_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="charging_enabled"
            android:onClick="onRadioButtonClicked">
        </RadioButton>
        <RadioButton
            android:id="@+id/battery_charging_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="battery_charging_enabled (Nexus/Pixel)"
            android:onClick="onRadioButtonClicked">
        </RadioButton>
        <RadioButton
            android:id="@+id/batt_slate_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="batt_slate_mode (Samsung)"
            android:onClick="onRadioButtonClicked">
        </RadioButton>

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset battery stats"
        android:id="@+id/reset_battery_stats"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/rgOpinion"/>


</RelativeLayout>
